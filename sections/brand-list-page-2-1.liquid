        },
        {
          "value": "9",
          "label": "75%"
        },
        {
          "value": "10",
          "label": "83.33%"
        },
        {
          "value": "12",
          "label": "100%"
        }
      ]
    }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Logo link to"
          }
        ]
      }
    ]
  }
  {% endschema %}
  