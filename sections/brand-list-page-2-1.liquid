<!-- brand-list.liquid -->
{%- if section.settings.enablesection -%}
<div class="customstyle{{ section.id }} " data-aos={{section.settings.animation}} >
    {%- include 'style-section' -%}
    <div class="{{ section.settings.setwidth }}">
      <div class="section-block">
        {%- include 'section-heading' -%}
        <div class=" row">
          {%- for block in section.blocks -%}
          <div class=" col-6 col-md-{{section.settings.width}} d-flex justify-content-center align-items-center my-4" {{ block.shopify_attributes }}>
            <div class="flex__item text-center">
              <div class="image-block">
                {%- if block.settings.image != blank -%}
                <a href="{{block.settings.link | default:'#'}}" class="{%- if section.settings.grayscale -%}hv-image-grayscale{%- endif -%}">                  
                  <img src="{{ block.settings.image | img_url: '250x250' }}" alt="{{ block.settings.image.alt }}" class="image-block__image">
                </a>
                {%- else -%}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                {%- endif -%}
              </div>
            </div>
          </div>
          {%- endfor -%}
        </div>
  
        {%- if section.blocks.size == 0 -%}
        {%- include 'no-blocks' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
  {%- endif -%}
  {% schema %}
  {
    "name": "Logo list Page 2-1",
    "class": "index-section",
    "max_blocks": 20,
    "settings": [
    {
        "type": "checkbox",
