                </div>
              </div>
              {% else if %}
              <div class="hero-video">
                      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              {% endif %}
            {%- endcase -%}
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
